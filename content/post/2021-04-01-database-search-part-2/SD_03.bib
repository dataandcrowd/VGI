url = {https://www.sciencedirect.com/science/article/pii/B9780081022955105797},
author = {Dan Jacobson},
keywords = {Case study, Contextual approach, Data collection, Data triangulation, Ethnography, Experimental methods, Fieldwork, Grounded theory, Induction, Methodological pluralism, Natural experiment, Naturalistic ethnography, Qualitative methods, Research methods, Thick description},
abstract = {Naturalistic inquiry is a predominately qualitative mode of inquiry. However, it extends and differs from purely qualitative research by integrating additional qualitative, quantitative, and multiple methodology techniques to investigate complex scenarios in a natural setting. Naturalistic inquiry provides the human geographer with a paradigm and context within which to conduct research in natural settings involving complex interactions between humans, society, and their environment. The naturalistic methodology assumes specific philosophical approaches that inform and guide its implementation. These include multiple constructed realities that can only be studied holistically, and the researcher and the subject of inquiry influence one another. Due to these limitations, the inquiry aims to develop a case-based, idiographic body of knowledge in the form of a collection of data or a working hypothesis. This approach explicitly acknowledges that all inquiry, including the biases and power relations of the researcher in framing the questions, the theory, paradigms, and approach behind the research, is value-laden. Naturalistic inquiry provides the human geographer with a paradigm and context within which to conduct research in natural settings involving complex interactions among humans, society, and their environment. It fits within the recent debates about practicing geography, the ethics of doing research, and a framework for establishing and clarifying whom the research is on, by, for, or with. Naturalistic Inquiry is becoming more salient to human geography, as it affords a methodology to understand how different and diverse groups share familiar places and spaces. The research operates in an iterative process to establish credibility, transferability, and dependability.}
}
@article{MARTI2019191,
title = {Identifying opportunity places for urban regeneration through LBSNs},
