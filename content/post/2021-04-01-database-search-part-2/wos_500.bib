@article{ ISI:000465038400013,
Author = {Zhao, Qiansheng and Chen, Zi and Liu, Chang and Luo, Nianxue},
Title = {{Extracting and classifying typhoon disaster information based on
   volunteered geographic information from Chinese Sina microblog}},
