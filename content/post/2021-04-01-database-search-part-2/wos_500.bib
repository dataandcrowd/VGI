Author = {Honarparvar, Sepehr and Forouzandeh Jonaghani, Rouzbeh and Alesheikh,
   Ali Asghar and Atazadeh, Behnam},
Title = {{Improvement of a location-aware recommender system using volunteered
   geographic information}},
Journal = {{GEOCARTO INTERNATIONAL}},
