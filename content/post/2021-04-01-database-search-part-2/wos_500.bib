@article{ ISI:000602168000001,
Author = {Kovacs-Gyoeri, Anna and Ristea, Alina and Havas, Clemens and Mehaffy,
   Michael and Hochmair, Hartwig H. and Resch, Bernd and Juhasz, Levente
