@article{ ISI:000451733800159,
Author = {Onencan, Abby Muricho and Meesters, Kenny and Van de Walle, Bartel},
Title = {{Methodology for Participatory GIS Risk Mapping and Citizen Science for
   Solotvyno Salt Mines}},
